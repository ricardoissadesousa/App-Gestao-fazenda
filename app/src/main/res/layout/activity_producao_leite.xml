<?xml version="1.0" encoding="utf-8"?>
<!-- Aba "Produção de Leite" do gestor, com formulário e relatório simplificado -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Layout para telas maiores (tablet) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Coluna 1: Registrar Produção -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registrar Produção Diária"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#2D3A3A"
                            android:layout_marginBottom="16dp"/>

                        <LinearLayout
                            android:id="@+id/container_tanques"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <!-- Tanques add -->
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Tanque 1 (Litros)"
                                android:layout_marginBottom="8dp">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:tag="tanque_input"/> <!-- Tag para identificar -->
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_add_tanque"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+ Adicionar Tanque"
                            android:textColor="#4A5C5C"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total do Dia"
                            android:textSize="16sp"
                            android:layout_marginTop="16dp"/>

                        <TextView
                            android:id="@+id/tv_producao_total_dia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 Litros"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#2D3A3A"/>

                        <Button
                            android:id="@+id/btn_salvar_producao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Salvar Produção"
                            android:padding="16dp"
                            android:layout_marginTop="24dp"
                            android:backgroundTint="#2D3A3A"/>
                    </LinearLayout>
                </ScrollView>
            </com.google.android.material.card.MaterialCardView>

            <!-- Coluna 2: Relatório Mensal -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Relatório Mensal"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#2D3A3A"/>
                        <Spinner
                            android:id="@+id/spinner_mes_relatorio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Card Relatório Total -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#F3F4F6"
                        app:cardElevation="0dp"
                        android:layout_marginBottom="12dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Produzido no Mês"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/tv_relatorio_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="544.077 L"
                                android:textColor="#2D3A3A"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Card Relatório Média -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#F3F4F6"
                        app:cardElevation="0dp"
                        android:layout_marginBottom="12dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Média Diária"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/tv_relatorio_media"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18.136 L"
                                android:textColor="#2D3A3A"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Card Relatório Faturamento -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#F3F4F6"
                        app:cardElevation="0dp"
                        android:layout_marginBottom="12dp"
                        app:strokeColor="#10B981"
                        app:strokeWidth="2dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Faturamento Estimado"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/tv_relatorio_faturamento"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R$ 1.550.619,45"
                                android:textColor="#10B981"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>