<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reprovar Solicitação"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/preto_texto" />

    <TextView
        android:id="@+id/tv_dialog_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Reprovando solicitação de [Nome] para o dia [Data]."
        android:textSize="16sp"
        android:textColor="@color/cinza_texto_suave" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp"
        android:text="Motivo da Recusa"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/preto_texto" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_motivo_recusa"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_motivo_recusa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:hint="Ex.: Equipe já reduzida nesta data." />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancelar_recusa"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="Cancelar"
            android:textColor="@color/preto_texto"
            app:backgroundTint="@color/cinza_borda"
            app:cornerRadius="12dp"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirmar_recusa"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="Confirmar Recusa"
            android:textColor="@color/cinza_borda"
            app:backgroundTint="@color/vermelho"
            app:cornerRadius="12dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>