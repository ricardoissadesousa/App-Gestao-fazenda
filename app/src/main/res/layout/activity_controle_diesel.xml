<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"  tools:context=".ui.activity.ControleDieselActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controle de Diesel"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"  />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"  android:text="Preencha os dados abaixo após abastecer o trator."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seu Nome"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_seu_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"  android:inputType="textPersonName"
            android:minHeight="56dp"
            android:background="@drawable/bg_input_field_default"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipamento"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/text_equipamento_selecionado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Trator TL 75"
            android:minHeight="56dp"
            android:background="@drawable/bg_input_field_default"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:clickable="true"
            android:focusable="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade Abastecida (Litros)"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_quantidade_litros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"  android:inputType="numberDecimal"
            android:minHeight="56dp"
            android:background="@drawable/bg_input_field_default"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horímetro"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_horimetro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"  android:inputType="numberDecimal"
            android:minHeight="56dp"
            android:background="@drawable/bg_input_field_default"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplicação (Motivo do abastecimento)"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_aplicacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"  android:gravity="top|start"
            android:lines="4"
            android:maxLines="6"
            android:minHeight="120dp"
            android:inputType="textMultiLine"
            android:background="@drawable/bg_input_field_default"
            android:padding="12dp" />

        <Button
            android:id="@+id/btn_registrar_abastecimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1B5E20"
            android:paddingVertical="16dp"
            android:text="Registrar Abastecimento"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="8dp" />

    </LinearLayout>
</ScrollView>